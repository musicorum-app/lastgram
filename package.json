{
  "name": "@lyricalsoul/lastgram",
  "version": "2.0.0-rc.1",
  "description": "lastgram made simple",
  "main": "dist/index.js",
  "type": "module",
  "author": "lyricalsoul <lyricalsoul@pm.me>",
  "scripts": {
    "start": "bun src/index.ts",
    "start:dev": "bun --watch src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 0",
    "database:generate": "bunx prisma generate",
    "database:deploy": "bunx prisma migrate deploy",
    "database:migrate": "bunx prisma migrate dev",
    "i18n:sync": "bunx i18next-locales-sync -p en -s pt es -l path/to/locales/folder --spaces 2",
    "cli:updateDiscordCommands": "bun dist/cli.js updateDiscordCommands"
  },
  "nodemonConfig": {
    "ignore": [
      "src/**"
    ]
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/node": "^22.13.4",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.7",
    "prisma": "6"
  },
  "dependencies": {
    "@musicorum/lastfm": "^0.3.2",
    "@polka/parse": "^1.0.0-next.0",
    "@polka/send-type": "^0.5.2",
    "@prisma/client": "6",
    "cassandra-driver": "^4.7.2",
    "country-emoji": "^1.5.6",
    "date-fns": "^4.1.0",
    "discord.js": "^14.18.0",
    "genius-lyrics": "^4.4.7",
    "genius-lyrics-api": "^3.2.1",
    "i18next": "^23.16.8",
    "i18next-fs-backend": "^2.6.0",
    "marked": "^15.0.7",
    "polka": "^0.5.2",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0"
  }
}
