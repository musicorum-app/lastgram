    "@prisma/client": "^5.22.0",
    "country-emoji": "^1.5.6",
    "date-fns": "^4.1.0",
    "discord.js": "^14.16.3",
    "genius-lyrics": "^4.4.7",
    "genius-lyrics-api": "^3.2.1",
    "i18next": "^23.16.5",
