{
  "name": "@musicorum-app/lastgram",
  "version": "2.0.0-rc.1",
  "description": "lastgram made simple",
  "main": "dist/index.js",
  "type": "module",
  "author": "lyricalsoul <hello@lyricalsoul.io>",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 0",
    "database:generate": "bunx prisma generate",
    "database:deploy": "bunx prisma migrate deploy",
    "database:migrate": "bunx prisma migrate dev",
    "i18n:sync": "bunx i18next-locales-sync -p en -s pt es -l path/to/locales/folder --spaces 2",
    "cli:updateDiscordCommands": "bun src/cli.ts updateDiscordCommands",
    "cli:checkTranslations": "bun src/cli.ts checkTranslations"
  },
  "nodemonConfig": {
    "ignore": [
      "src/**"
    ]
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/marked": "^6.0.0",
    "chokidar": "^5.0.0",
    "dotenv": "^17.2.3",
    "prisma": "^7.3.0"
  },
  "dependencies": {
    "@musicorum/lastfm": "^0.4.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@types/pg": "^8.16.0",
    "country-emoji": "^1.5.6",
    "date-fns": "^4.1.0",
    "discord.js": "^14.25.1",
    "i18next": "^25.8.0",
    "i18next-fs-backend": "^2.6.1",
    "ioredis": "^5.9.2",
    "marked": "^17.0.1",
    "pg": "^8.17.2",
    "prom-client": "^15.1.3"
  }
}
